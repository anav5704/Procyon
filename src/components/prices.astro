---
const {bundle, price, Feature1, Feature2, Feature3, Tech1, Tech2, Tech3, Use1, Use2, Use3} = Astro.props
---

<div class="flex w-4/5 mx-auto justify-between bg-procyon-highlight-purple rounded-lg mb-10 p-4 mb-12 z-20 prices">
    <div class="flex flex-col justify-around">
        <p class="text-white text-3xl">{bundle}</p>
        <p class="burningText text-3xl">{price}</p>
    </div>
    <div class="flex flex-col justify-center">
        <p class="text-white text-lg mb-0.5">Features</p>
        <p class="text-secondary-color text-sm">{Feature1}</p>
        <p class="text-secondary-color text-sm">{Feature2}</p>
        <p class="text-secondary-color text-sm">{Feature3}</p>
       
    </div>
    <div class="flex flex-col justify-center">
        <p class="text-white text-lg mb-0.5">Tech</p>
        <p class="text-secondary-color text-sm">{Tech1}</p>
        <p class="text-secondary-color text-sm">{Tech2}</p>
        <p class="text-secondary-color text-sm">{Tech3}</p>
    </div>
    <div class="flex flex-col justify-center">
        <p class="text-white text-lg mb-0.5">Uses</p>
        <p class="text-secondary-color text-sm">{Use1}</p>
        <p class="text-secondary-color text-sm">{Use2}</p>
        <p class="text-secondary-color text-sm">{Use3}</p>
    </div>
    <div class="flex flex-col justify-around">
       
        <div class="heroBtn w-min">
            <button class="btn font-semibold tracking-wider border-2 border-secondary-color text-secondary-color m-0 mb-2">Examples</button>
        </div>

           <div class="heroBtn">
            <button class="btn font-semibold tracking-wider burningBtn w-full">Hire Us</button>
        </div>

    </div>
</div>